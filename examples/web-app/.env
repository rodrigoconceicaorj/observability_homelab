# Configuração do Grafana Faro
# URL do Grafana Alloy (endpoint para envio de dados)
# Nota: Para demonstração sem Docker, usando endpoint mock
VITE_FARO_URL=http://localhost:3001/api/faro/collect

# Configurações da aplicação
VITE_APP_NAME=POC Grafana Faro Web
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Configurações opcionais do Faro
# Taxa de amostragem para traces (0.0 a 1.0)
VITE_FARO_TRACE_SAMPLE_RATE=1.0

# Taxa de amostragem para sessões (0.0 a 1.0)
VITE_FARO_SESSION_SAMPLE_RATE=1.0

# Habilitar/desabilitar instrumentações específicas
VITE_FARO_ENABLE_CONSOLE=true
VITE_FARO_ENABLE_ERRORS=true
VITE_FARO_ENABLE_WEBVITALS=true
VITE_FARO_ENABLE_TRACING=true

# Debug mode (logs adicionais no console)
VITE_FARO_DEBUG=true